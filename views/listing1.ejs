			<div class="fh5co-hero">
				<div class="fh5co-overlay"></div>
				<div class="fh5co-cover text-center" data-stellar-background-ratio="0.5"
					style="background-image: url(/listing/images/dusk.png);">
					<div class="desc animate-box">
						<h2>Hotel Listings</h2>
						<span><a class="btn btn-primary btn-lg" onclick="openForm()" href="#">Create Listings</a></span>
					</div>
				</div>

			</div>


			<div class="form-popup" id="myForm">
				<form action="/hotels/create" class="form-container" method="POST">
					<textarea id="description" name="description" placeholder="Description"></textarea>
					<input type="url" name="image" placeholder="Image">
					<input type="text" placeholder="Address" name="address" required>
					<input type="text" placeholder="Price" name="price" required>
					<input type="number" placeholder="Number of Beds" name="numOfBeds">
					<input type="number" placeholder="Number of Baths" name="numOfBaths">
					<input type="number" placeholder="Ratings" name="ratings" required>

					<button type="submit" class="btn" onclick="closeForm()">Create</button>
				</form>
			</div>

			<div class="fh5co-listing">
				<div class="container">
					<div class="row">
						<% for (let d of user.hotels) {%>
							<div class="col-md-4 fh5co-item-wrap">

								<img src="<%= d.image %>" alt="<%= d.description %> " class="img-responsive">
								<div class="fh5co-listing-copy">
									<h2>
										<%= d.description %>
									</h2>
									<h3>
										<%= d.address %>
									</h3>
									<span class="icon">
										<i class="icon-chevron-right"></i>
										<%= d.price %>
									</span>
								</div>

								<span><button class="btn btn-primary btn-lg" onclick="editForm()"
										href="#">Edit</button></span>
								<div class="form-popup" id="myForm2">
									<form class="form-container"
										action="/hotels/update/<%= d.id %>" method="post">
										<input type="text" id="description" name="description"
											placeholder="Description"></input>
										<input type="url" name="image" id="image" placeholder="Image">
										<input type="text" placeholder="Address" id="address" name="address" required>
										<input type="text" placeholder="Price" id="price" name="price" required>
										<input type="number" placeholder="Number of Beds" id="numOfBeds"
											name="numOfBeds">
										<input type="number" placeholder="Number of Baths" id="numOfBaths"
											name="numOfBaths">
										<input type="number" placeholder="Ratings" id="ratings" name="ratings" required>

										<button class="btn" id="close-editbtn" style="background-color: red"
											onclick="closeEditForm()">Cancel</button>

										<button type="submit" class="btn" id="editbtn">Update</button>
									</form>
								</div>
								<span><button class="btn btn-primary btn-lg" id="dele"
										value="<%= d.id %>">Delete</button></span>

							</div>
							<%} %>
					</div>
				</div>
			</div>

			<div class="text-center p-t-136">
				<a class="txt2" href="/users/listing2">
					<i class="fa fa-long-arrow-left m-l-5" aria-hidden="true"></i>
					Back
				</a>
			</div>






