	<!-- jQuery -->
	<script>
		const deleteBtn = document.getElementById('dele')
		const id = deleteBtn.value
		deleteBtn.addEventListener('click', (e) => {
			e.preventDefault()
			fetch('http://localhost:4000/hotels/delete/' + id, { method: 'DELETE' })
			//window.location.reload()

		})
	</script>
	<script>
		const logout = document.getElementById('loggedout')
		logout.addEventListener('click', (e) => {
			e.preventDefault()
			fetch('http://localhost:4000/users/logout', { method: 'POST' })
			window.location.replace("http://localhost:4000/users/signin")
		})
	</script>

